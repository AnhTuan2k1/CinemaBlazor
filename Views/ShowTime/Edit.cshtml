@using CinemaBlazor.ViewModels

@model ShowTimeViewModel
@{
    Layout = "_Layout";
}


<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4>Update a movie</h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Edit">
